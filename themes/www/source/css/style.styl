// Section Cards
.cards-section
  background  white
.cards-section,.card-section-heading,.cards-group
  width  100%
  height  100%
  padding  70px 0px
  display  flex
  flex-direction  column
  justify-content  center
  align-items  center

  //Titulo y texto principal
  .card-section-heading
    padding 0px

    .card-section-heading-title,.card-section-heading-text
      color color-first
      font-size  font-xl
      text-align  center
      margin-bottom  20px
    .card-section-heading-text
      color color-letter
      font-size  font-m

  //Secci√≥n grupo de cards
  .cards-group
    padding  10px 0px
    flex-direction  row
    position  relative
    margin-top 20px
    flex-wrap  wrap
    gap  20px
    .card
      margin-bottom  30px !important
      z-index  1
      position  relative
      background  white
      border-radius 25px
      width 250px
      height 350px
      align-items  left
      justify-content  left
      display  flex
      flex-direction  column
      margin  auto
      padding 40px
      .card-image
        width 64px
        height 64px
        margin-bottom  20px
        img
          width  100%
          height  100%
          object-fit  cover
      .card-title 
        font-size  font-s
        color color-first
        margin-bottom  20px
      .card-text 
        color color-letter
        font-size  font-s
        display -webkit-box
        -webkit-line-clamp 5
        line-height  1.34
        -webkit-box-orient vertical
        overflow hidden
        text-overflow ellipsis
    .card:before
      border-radius 25px
      content  ""
      z-index  -1
      position  absolute
      top  0
      right  0
      bottom  0
      left  0
      background  linear-gradient(-45deg, #ff00a2 0%, #0400ff 100% )
      transform  translate3d(0px, 10px, 0) scale(0.95)
      filter  blur(20px)
      opacity  var(0.7)
      transition  opacity 0.3s
  
    .card:after
      border-radius 25px
      content  ""
      z-index  -1
      position  absolute
      top  0
      right  0
      bottom  0
      left  0
      background  inherit
  

//Slider 
//Contenedor slider
.slide
  width  100%
  height  auto
  background  color-white
  overflow  hidden

//Ocultar los radioinput
[type=radio] 
  display  none

#slider 
  height  65vw
  position  relative
  perspective  1000px
  transform-style  preserve-3d


#slider label 
  margin  auto
  border-radius  25px
  position  absolute
  left  0 
  right  0
  cursor  pointer
  transition  transform 0.4s ease


#s1:checked ~ #slide4, #s2:checked ~ #slide5,
#s3:checked ~ #slide1, #s4:checked ~ #slide2,
#s5:checked ~ #slide3 
  box-shadow  0 1px 4px 0 rgba(0,0,0,.37)
  transform  translate3d(-150%,0,-300px)


#s1:checked ~ #slide5, #s2:checked ~ #slide1,
#s3:checked ~ #slide2, #s4:checked ~ #slide3,
#s5:checked ~ #slide4 
  box-shadow  0 6px 10px 0 rgba(0,0,0,.3), 0 2px 2px 0 rgba(0,0,0,.2)
  transform  translate3d(-85%,0,-200px)
  top 2%


#s1:checked ~ #slide1, #s2:checked ~ #slide2,
#s3:checked ~ #slide3, #s4:checked ~ #slide4,
#s5:checked ~ #slide5 
  box-shadow  0 13px 25px 0 rgba(0,0,0,.3), 0 11px 7px 0 rgba(0,0,0,.19)
  transform  translate3d(0,0,0)
  top 6%
 
#s1:checked ~ #slide2, #s2:checked ~ #slide3,
#s3:checked ~ #slide4, #s4:checked ~ #slide5,
#s5:checked ~ #slide1 
  box-shadow  0 6px 10px 0 rgba(0,0,0,.3), 0 2px 2px 0 rgba(0,0,0,.2)
  transform  translate3d(75%,0,-200px)
  top 2%


#s1:checked ~ #slide3, #s2:checked ~ #slide4,
#s3:checked ~ #slide5, #s4:checked ~ #slide1,
#s5:checked ~ #slide2 
  box-shadow  0 1px 4px 0 rgba(0,0,0,.37)
  transform  translate3d(150%,0,-300px)


