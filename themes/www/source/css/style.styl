              margin 15px

            .buttons-testimonials
              width: 100%
              position: absolute;
              top: 100%;
              transform: translate(0, -50%);
            .slider-button
              background-color color-first
              color color-white
              padding 8px 10px
              margin 8px 4px
              border none
              border-radius 4px
              cursor pointer
              font-weight 600
              letter-spacing 3px
              text-transform uppercase
