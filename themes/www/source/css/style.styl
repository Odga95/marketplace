// Estilo para el banner con fondo 
.banner
  width: 100%
  height: 100%
  padding 50px 120px
  display: flex
  justify-content: center
  align-items: center
  background  #ffffff;
  
  .banner__container
    width: 100%
    height: 100%
    padding: 70px 0px 50px 60px
    background-image: linear-gradient(135deg, #ffc500 0, #ebce00 7.14%, #d4d500 14.29%, #bbdc00 21.43%, #a0e100 28.57%, #82e600 35.71%, #5bea00 42.86%, #00ee0a 50%, #00f13c 57.14%, #00f35a 64.29%, #00f575 71.43%, #00f790 78.57%, #00f8aa 85.71%, #00f9c5 92.86%, #00fadf 100%);
    border-radius 25px
    .banner__container--Text
      width: 60%
      height 100%
      color white
      h2 
        font-size font-m
        margin-bottom: 10px
      p
        font-size font-s
    .banner__button 
      margin-top 50px
      background: rgba(43, 43, 43, 0.938)
      color white
      width fit-content
      padding: 10px 15px
      margin-left: 40px
      border-radius 5px
      font-weight: 900
      font-size font-xs


// Section Cards
.cards-section
  background: white
.cards-section,.card-section-heading,.cards-group
  width: 100%
  height: 100%
  padding: 70px 0px
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center

  //Titulo y texto principal
  .card-section-heading
    padding 0px

    .card-section-heading-title,.card-section-heading-text
      color color-first
      font-size: font-xl
      text-align: center
      margin-bottom: 20px
    .card-section-heading-text
      color color-letter
      font-size: font-m

  //Secci√≥n grupo de cards
  .cards-group
    padding: 10px 0px
    flex-direction: row
    position: relative
    margin-top 20px
    flex-wrap: wrap
    gap: 20px
    .card
      margin-bottom: 30px !important
      z-index: 1;
      position: relative
      background: white
      border-radius 25px
      width 250px
      height 350px
      align-items: left
      justify-content: left
      display: flex
      flex-direction: column
      margin: auto
      padding 40px
      .card-image
        width 64px
        height 64px
        margin-bottom: 20px
        img
          width: 100%
          height: 100%
          object-fit: cover
      .card-title 
        font-size: font-s
        color color-first
        margin-bottom: 20px
      .card-text 
        color color-letter
        font-size: font-s
        display -webkit-box
        -webkit-line-clamp 5
        line-height: 1.34
        -webkit-box-orient vertical
        overflow hidden
        text-overflow ellipsis
    .card:before {
      border-radius 25px
      content: "";
      z-index: -1;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background: linear-gradient(-45deg, #ff00a2 0%, #0400ff 100% );
      transform: translate3d(0px, 10px, 0) scale(0.95);
      filter: blur(20px);
      opacity: var(0.7);
      transition: opacity 0.3s;
    }
    .card::after {
      border-radius 25px
      content: "";
      z-index: -1;
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      left: 0;
      background: inherit;
    }
        



      








    







