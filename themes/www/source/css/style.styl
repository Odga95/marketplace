                height  250px
                @media movil
                  width  85%
                  height  350px
                @media tablet
                  width  70%
                  height  400px
                img
                  width: 100%
                  border-radius 18px
                  height 100%
                  object-fit  cover
              .mySlide
                display none
                width  100%
