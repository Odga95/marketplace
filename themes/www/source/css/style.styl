// Section Cards
.cards-section
  background  white
.cards-section,.card-section-heading,.cards-group
  width  100%
  height  100%
  padding  70px 0px
  display  flex
  flex-direction  column
  justify-content  center
  align-items  center

  //Titulo y texto principal
  .card-section-heading
    padding 0px
    .card-section-heading-title,.card-section-heading-text
      color color-first
      font-size  font-l
      text-align  center
      margin-bottom  20px
      @media movil
        font-size  font-xl
    .card-section-heading-text
      color color-letter
      font-size  font-m

  //Sección grupo de cards
  .cards-group
    padding  10px 0px
    flex-direction  row
    position  relative
    margin-top 20px
    flex-wrap  wrap
    gap 20px
    //Diseño del card
    .card
      margin-bottom  30px !important
      z-index  1
      position  relative
      background  white
      width 220px
      height 320px
      align-items  left
      justify-content  left
      display  flex
      flex-direction  column
      margin  auto
      padding 30px
      transition 0.25s
      //Tamaño del icono del card
      .card-image
        width 64px
        height 64px
        margin-bottom  20px
        img
          width  100%
          height  100%
          object-fit  cover
      //Diseño y tamaño del texto y el titulo del card
      .card-title 
        font-size  font-s
        color color-first
        margin-bottom  20px
      .card-text 
        color color-letter
        font-size  font-s
        display -webkit-box
        -webkit-line-clamp 5
        line-height  1.34
        -webkit-box-orient vertical
        overflow hidden
        text-overflow ellipsis
    //Sombra de colores gradiente para el card
    .card:before
      content  ""
      z-index  -1
      position  absolute
      top  0
      right  0
      bottom  0
      left  0
      background  linear-gradient(-45deg, #ff00a2 0%, #0400ff 100% )
      transform  translate3d(0px, 10px, 0) scale(0.95)
      filter  blur(20px)
      opacity  var(0.7)
      transition  opacity 0.3s

    .card:after
      border-radius 15px
      content  ""
      z-index  -1
      position  absolute
      top  0
      right  0
      bottom  0
      left  0
      background  inherit
     //Hover card
    .card:hover
      transform scale(1.1)
      

