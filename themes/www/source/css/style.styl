          width 100%


      .tab-content__comments
        position absolute
        top 0
        left 0
        background: black
        width: 100%
        height: 50vh
        transition 1s
      .tab-content__resume
        position absolute
        top 0
        left 0
        background: yellow
        width: 100%
        height: 50vh
        transition 1s
      .tab-content__develop-detail
        position absolute
        top 0
        left 0
        background: blue
        width: 100%
        height: 50vh
        transition 1s
      .enabled
        opacity: 1
        z-index 2
        position: relative
      .disabled
        opacity: 0
        z-index -2
        transform scale(0)
      

      



                  


          






