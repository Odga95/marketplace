footer
  background  #110f1f;
  opacity .94
  .footer-container 
    display: flex
    justify-content: left
    align-items: flex-start
    width: 100%
    padding: 70px 0px 40px 0px
    flex-wrap: wrap

    .description
      color white
      width: 100%
      height: 100%
      display: flex
      flex-direction: column
      text-align: left
      justify-content: center
      align-items: left
      padding: 20px
      @media movil
        width: 50%
      @media escritorio-s
        width: 40%
      .description__icon
        width: 80%
        height: auto
        padding: 0px 0px 15px
        img
          width: auto
          height: 32px
          object-fit: cover
      .description__text
        width: 100%
        padding: 0px 0px 30px 0px
        font-size: font-xs
        line-height: 1.4
      .description__networks
        display: flex
        align-items: center
        gap 20px
        .fa-brands  
          transition: 0.1s
          color color-second
        .fa-brands:hover
          color color-third
        
    
    .marketplace,
    .company,
    .myAcount
      padding: 20px
      color white
      width: 100%
      height: 100%
      @media movil
        width: 50%
      @media escritorio-s
        width: 20%
      h2
        font-size: font-s
        color color-second
      ul
        li
          list-style: none
          width fit-content
          a
            color white
            text-decoration: none
            font-size: font-xs
            transition: 0.1s
          a:hover
            color color-second
          
    .legal 
      width: 100%
      display: flex
      justify-content: center
      font-size: font-xs
      padding: 10px 20px
      flex-direction: column-reverse
      @media movil
        flex-direction: row
        justify-content: space-between

      
      .year
        color white
        width: fit-content
        margin auto
        margin-top 50px
        @media movil
          margin 0px
          margin-top 10px
          width: fit-content
      .links
        width: 100%
        @media movil
          width: fit-content
        ul
          display: flex
          justify-content: center
          margin 10px 0px

          li
            margin 0px 10px
            list-style: none
            text-align: center
            a
              transition: 0.1s
              text-decoration: none
              color white
            a:hover
              color color-second

      