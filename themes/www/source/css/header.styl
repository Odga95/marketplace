header
  position relative
  width 100%
  height 100%
  #canvas
    position absolute
    width 100%
    height 100%
    opacity 1
    z-index -1
  .nav
    height 70px
    overflow hidden
    background  rgba(5, 6, 26, 0.966)
    display flex
    justify-content  space-between
    text-align center
    opacity 0.97
    @media escritorio-s
      justify-content space-evenly
      

    z-index 2
    .small
      margin 0px 30px
      display flex
      text-align center
      height: 80px
      gap: 20px
      .logo
        padding: 20px 5px
        img
          z-index 2
          width: 100%
          height: 100%
          object-fit: cover
          cursor pointer
          
    small,
    .menu,
    .logo,
    .navigation,
    .shopping-cart,
    .sign-up,
    .sign-in
      display flex
      justify-content center
      text-align center
      align-items: center
      ul
        padding: 0px 70px 0px 20px
        gap 35px
        display flex
        margin auto
        li
          list-style none
          display flex
          justify-content center
          text-align center
          align-items center
          a
            text-decoration none
            color white
            transition 0.2s
            display flex
            align-items: baseline
            gap 5px
            .fa-xs
              font-size .55em
            span
              font-weight: 500
              font-size: 15px
              transition 0.1s

          a:hover
            color rgba(155, 160, 255, 0.966)
            font-weight: 500
    .navigation
      display: none
      @media escritorio-s
        display: flex
    .menu
      margin 0px -15px
      transform: rotate(90deg)
      img
        transform: scale(1.5)
        display: block
        z-index 2
        cursor pointer
      @media escritorio-s
        display: none
    .sign-user
      display: flex
      align-items: center
      color white
      gap 20px
      
      .sign-up,
      .sign-in
        display: none
        @media escritorio-s
          display: flex
        a
          text-decoration: none
          color white
          span
            font-weight: 500
            font-size: 15px
            transition 0.5s
        a:hover
          color rgba(111, 115, 192, 0.966)

    .shopping-cart
      display flex
      align-items: center
      padding: 0px 20px
      gap 15px
      margin 0px 10px
      .fa-user-astronaut
        background: white
        width: 40px
        height: 40px
        display: flex
        justify-content: center
        border-radius: 100%
        align-items: center
        color rgba(5, 6, 26, 0.966)
        transition 0.5s
        transform: scale(0.85)
        @media tablet
          transform: scale(1)
        @media escritorio-s
          display none
      .fa-user-astronaut:hover
        background rgba(111, 115, 192, 0.966)
        color white
        cursor pointer
      a
        transition: 0.1s
        color white
        text-decoration: none

      .fa-cart-shopping
        position: relative
        transition: 0.5s
        margin-top 7px
        @media tablet
          margin-top 2px

        .bag-cuantity
          position: absolute
          right: -10px
          left: auto
          top: -10px
          width: 18px
          height: 18px
          display: flex
          justify-content: center
          align-items: center
          background: rgb(255, 196, 0)
          border-radius: 100%
          font-size: 9px
          transition: 0.5s
          font-weight: 900
          color black
        .bag-cuantity:hover
          color black
          transform: scale(1.2)
      .fa-cart-shopping:hover .bag-cuantity
        color black
        transform: scale(1.2)
        
          



@import url("style.styl");