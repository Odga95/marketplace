@font-face {
  font-family: CalSans-SemiBold;
  src: url(fonts/otf/CalSans-SemiBold.otf);
}
fontfam = 'CalSans-SemiBold', sans-serif;


header
  position relative
  width 100%
  height 100%
  #canvas
    position absolute
    width 100%
    height 100%
    opacity 1
    z-index -1
  .nav
    height 80px
    overflow hidden
    background  rgba(5, 6, 26, 0.966);
    display flex
    justify-content space-evenly
    text-align center

    z-index 2
    .logo
      padding: 20px
      img
        width: 100%
        height: 100%
        object-fit: cover
    .logo,
    .navigation,
    .shopping-cart,
    .sign-up,
    .sign-in
      display flex
      justify-content center
      text-align center
      align-items: center
      ul
        padding: 0px 70px
        gap 35px
        display flex
        margin auto
        li
          list-style none
          display flex
          justify-content center
          text-align center
          align-items center
          a
            text-decoration none
            color white
            transition 0.2s
            display flex
            align-items: baseline
            gap 5px
            .fa-xs
              font-size .55em
            span
              font-weight: 500
              font-size: 16px
              transition 0.1s

          a:hover
            color rgba(155, 160, 255, 0.966)
            font-weight: 500
    .sign-user
      display: flex
      gap 20px
      .sign-up,
      .sign-in
        a
          text-decoration: none
          color white
          span
            font-weight: 500
            font-size: 16px
            transition 0.5s
        a:hover
          color rgba(155, 160, 255, 0.966)

    .shopping-cart
      padding: 0px 20px
      a
        transition: 0.1s
        color white
      a:hover
        color rgba(155, 160, 255, 0.966)
